<Alloy>
  <Window id="userLogin" class="container" layout="vertical">
    <ScrollableView id="scrollableView" height="60%">
      <View id="view1" backgroundColor="#123" />
      <View id="view2" backgroundColor="#246" />
      <View id="view3" backgroundColor="#48b" />
    </ScrollableView>
    <View layout="vertical">
      <Button class="facebook" onClick="openLoginFacebook" title="Login with Facebook" />
      <Button class="loginDuppp" onClick="openLoginDuppp" title="Login with Duppp" />
      <Button class="submit" onClick="openRegisterDuppp" title="Register with Duppp" />
    </View>
  </Window>
  <Window id="userLoginDuppp" class="windowStyle">
    <ScrollView id="loginView" class="container">
      <View class="content" layout="vertical">
        <TextField id="loginUsr" class="loginUsr field" value="Username" autocapitalization="Titanium.UI.TEXT_AUTOCAPITALIZATION_NONE" />
        <TextField id="loginPwd" class="loginPwd field" passwordMask="true" value="Password" autocapitalization="Titanium.UI.TEXT_AUTOCAPITALIZATION_NONE" />
        <Button id="loginBtn" class="submit" onClick="login" title="Login" />
      </View>
    </ScrollView>
	</Window>
  <Window id="userRegisterDuppp" class="windowStyle">
    <ScrollView id="registerView" class="container" visible="false">
      <View class="content" layout="vertical">
        <TextField id="usernameField" class="field" value="Username" autocapitalization="Titanium.UI.TEXT_AUTOCAPITALIZATION_NONE" />
        <TextField id="emailField" class="field" value="Email" keyboardType="Titanium.UI.KEYBOARD_EMAIL" autocapitalization="Titanium.UI.TEXT_AUTOCAPITALIZATION_NONE" />
        <TextField id="passwordRegisterField" class="field" passwordMask="true" value="Password" autocapitalization="Titanium.UI.TEXT_AUTOCAPITALIZATION_NONE" />
        <Button id="registerBtn" class="submit" onClick="register" title="Register" />
      </View>
    </ScrollView>
  </Window>
</Alloy>
