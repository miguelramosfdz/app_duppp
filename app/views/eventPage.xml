<Alloy>
	<Window id="eventPage" class="eventPage">
		<ScrollView id="scrollView" class="container" layout='vertical'>
			<VideoPlayer id="videoPlayer" ns="Ti.Media" top="0" height="300" width="320" backgroundColor="black" autoplay="false" />
			<View id="caption" class="caption">
				<ImageView id="author_image" class="author_image" />
				<Label id="author" class="author" />
				<Label id="f_title" class="title" />
				<Label id="f_date" class="date" />
			</View>
      <View id="actionBtns" layout='horizontal' >
        <Button title="Comments" onClick="comment" class="btn comments" />
        <Button id="like" title="Like" onClick="like" class="btn like" />
        <Button title="Extra" class="btn extra" />
      </View>
      <Label id="likeCount" />
      <Label id="commentCount" />
      <View id="commentsList" layout='vertical' />
		</ScrollView>
	</Window>
</Alloy>
