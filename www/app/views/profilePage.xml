<Alloy>
  <View id="Wrapper">
    <Require type="widget" src="com.chariti.navigationBar" id="NavigationBar" image="duppp.png"/>

    <ScrollView id="scrollView" class="container" layout='vertical'>
      <View class="header" layout='horizontal'>
        <ImageView id="authorImage" class="authorImage" />
        <Label id="author" class="author" />
      </View>
      <View class="headerInfo" layout='horizontal'>
        <View class="wFollower wrapper" layout='vertical'>
          <Label id="followerCount" />
          <Label class="wlabel" text="follower" />
        </View>
        <View class="wEvent wrapper" layout='vertical'>
          <Label id="eventCount" />
          <Label class="wlabel" text="events" />
        </View>
      </View>
      <TableView id="table" allowsSelection="false" scrollable="false" />
    </ScrollView>
  </View>
</Alloy>
